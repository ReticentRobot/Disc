<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Disc.AboutPage"
             BackgroundColor="#7647f3">
    
    <ScrollView>
        <VerticalStackLayout 
            Spacing="10" 
            Margin="10"
            VerticalOptions="StartAndExpand">
            
            <HorizontalStackLayout 
                Spacing="10">
                
                <Image 
                    Source="icon_disc.png"
                    SemanticProperties.Description="The Disc Logo"
                    HeightRequest="64" />
                
                <Label 
                    FontSize="22" 
                    FontAttributes="Bold" 
                    Text="Disc" 
                    VerticalOptions="End" />
                
                <Label 
                    FontSize="22" 
                    Text="v0.1" 
                    VerticalOptions="End" />
                
            </HorizontalStackLayout>

            <Label 
                Text="ReticentRobot.com" />
            <Button 
                Text="Learn more..." 
                Clicked="Logo_Clicked"/>
            
        </VerticalStackLayout>
    </ScrollView>
    
</ContentPage>